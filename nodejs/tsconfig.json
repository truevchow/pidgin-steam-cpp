{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/*"
    ],
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ]
}